<!-- Company details page -->

<h1> <%= @company["name"] %> </h1>

<h2> <%= @company["city"] %>, <%= @company["state"] %> </h2>

<h3>Contacts</h3>

<ul>
  <% for contact in @contacts %>
    <a href ="/contacts/<%= contact["id"]%>">
      <li> <%= contact["first_name"] %> <%= contact["last_name"] %></li>
    </a>
  <% end %>
</ul>

<p>
  <a href="/contacts/new?company_id=<%= @company["id"] %>">New Contact</a>
</p>

<p>
  <a href ="/companies/<%=@company["id"]%>/edit">Edit Company Info</a>
</p>

<form action ="/companies/<%=@company["id"]%>" method ="post" >
  <input type ="hidden" name ="_method" value ="delete">
  <button> Delete company </button>
</form>

<p>
  <a href="/companies">Back to All Companies</a>
</p>